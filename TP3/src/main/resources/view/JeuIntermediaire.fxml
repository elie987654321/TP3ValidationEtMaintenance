<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.JeuIntermediaireGraphicalController">
    <MenuBar>
        <Menu text="Difficulté">
            <MenuItem fx:id="debutantMenuItem" text="Débutant" onAction="#handleJeuDebutant"/>
            <MenuItem fx:id="intermediaireMenuItem" text="Intermédiaire" onAction="#handleJeuIntermediaire"/>
            <MenuItem fx:id="expertMenuItem" text="Expert" onAction="#handleJeuExpert"/>

        </Menu>
    </MenuBar>
    <BorderPane prefHeight="55.0" prefWidth="328.0">
        <center>
            <Button fx:id="bonhomme" mnemonicParsing="false" BorderPane.alignment="CENTER" onAction="#recommencerLaPartie"/>
        </center>
    </BorderPane>
    <GridPane fx:id="tableauDeJeu" prefWidth="320.0" prefHeight="320.0" hgap="1.0" vgap="1.0" />
</VBox>
