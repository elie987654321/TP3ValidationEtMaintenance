<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.JeuDebutantGraphicalController">
   <MenuBar>
      <Menu text="Difficulté">
         <MenuItem fx:id="debutantMenuItem" onAction="#handleJeuDebutant" text="Débutant" />
         <MenuItem fx:id="intermediaireMenuItem" onAction="#handleJeuIntermediaire" text="Intermédiaire" />
         <MenuItem fx:id="expertMenuItem" onAction="#handleJeuExpert" text="Expert" />
      </Menu>
   </MenuBar>
   <BorderPane prefHeight="55.0" prefWidth="328.0">
      <center>
         <Button fx:id="bonhomme" mnemonicParsing="false" BorderPane.alignment="CENTER" onAction="#recommencerLaPartie"/>
      </center>
   </BorderPane>
   <GridPane fx:id="tableauDeJeu" hgap="1.0" prefHeight="320.0" prefWidth="320.0" vgap="1.0">
   </GridPane>
</VBox>
