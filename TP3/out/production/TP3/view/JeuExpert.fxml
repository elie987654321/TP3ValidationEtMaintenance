<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.JeuExpertGraphicalController">
    <stylesheets>
        <URL value="@../css/Jeu.css" />
    </stylesheets>
    <MenuBar>
        <Menu text="Difficulté">
            <MenuItem fx:id="debutantMenuItem" text="Débutant" onAction="#handleJeuDebutant"/>
            <MenuItem fx:id="intermediaireMenuItem" text="Intermédiaire" onAction="#handleJeuIntermediaire"/>
            <MenuItem fx:id="expertMenuItem" text="Expert" onAction="#handleJeuExpert"/>
        </Menu>
    </MenuBar>
    <BorderPane minHeight="45">
        <center>
            <Button fx:id="bonhomme" mnemonicParsing="false" BorderPane.alignment="CENTER" onAction="#recommencerLaPartie"/>
        </center>
    </BorderPane>
    <BorderPane fx:id="contour">
        <center>
            <GridPane fx:id="tableauDeJeu" hgap="1.0" prefHeight="320.0" prefWidth="331.0" vgap="1.0" BorderPane.alignment="CENTER">
            </GridPane>
        </center>
    </BorderPane>
</VBox>
